<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height_toolbar</item>
        <item name="android:layout_marginBottom">@dimen/margin_elements</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="titleTextColor">?attr/textColorSecondary</item>
        <item name="contentInsetStartWithNavigation">@dimen/padding_icon</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Button_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_from_edges</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black_app</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconTint">@color/black_app</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextView_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/padding_from_edges</item>
        <item name="android:paddingVertical">@dimen/padding_view_settings</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="TextView_track">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button_placeholder" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>

        <item name="textAllCaps">false</item>
    </style>


    <style name="Track_info_description">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="layout_constraintStart_toStartOf">@id/leftBorder</item>
    </style>
    <style name="Track_info" parent="Track_info_description">
        <item name="android:textColor">?attr/textColorSecondary</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintEnd_toEndOf">@id/rightBorder</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="layout_constraintStart_toStartOf">@id/infoBarrier</item>
    </style>
    <style name="CustomTab" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>